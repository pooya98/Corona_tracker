<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/textview_studentID"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="학번"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText_studentID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.228"
            app:layout_constraintTop_toTopOf="@+id/editText_studentID"
            app:layout_constraintVertical_bias="0.388"/>

        <EditText
            android:id="@+id/editText_studentID"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@id/textview_studentID"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/confirm_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="login"
            android:text="로그인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1">

    </LinearLayout>
</LinearLayout>